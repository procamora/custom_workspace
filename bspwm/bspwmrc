#!/bin/bash

sxhkd &

killall -q compton                                      # Killsll previos compton
compton --config ~/.config/compton/compton.conf &       # Transparency Management
wmname LG3D &                                           # Fix problem Burp Suite proportion full screen
feh --bg-fill ~/.config/wallpaper.png &                 # Set wallpaper brackground

~/.config/polybar/launch.sh &                           # Launch polybar
~/.config/bspwm/scripts/autorun &                       # Autorun scripts

bspc config pointer_modifier mod1                       # Set key super to key windows (metawin)
bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width        5
bspc config window_gap          0

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true


# fullscreen applications
bspc rule -a vlc desktop='^7' state=fullscreen follow=on


# floating applications
bspc rule -a dolphin desktop='^2' state=floating follow=on
bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a mplayer2 state=floating
bspc rule -a ksysguard state=floating follow=on
bspc rule -a TelegramDersktop state=floating follow=on


# tiled applications
bspc rule -a Sublime_text state=tiled follow=on
bspc rule -a systemsettings state=tiled follow=on


# pseudo_tiled applications
bspc rule -a inkscape state=pseudo_tiled follow=on
bspc rule -a Spotify state=pseudo_tiled follow=on
bspc rule -a VirtualBox Manager state=pseudo_tiled follow=on
bspc rule -a VirtualBox Machine state=pseudo_tiled follow=on
bspc rule -a Firefox desktop='^1' state=pseudo_tiled follow=on
bspc rule -a Chromium desktop='^1' state=pseudo_tiled follow=on


# Other
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off